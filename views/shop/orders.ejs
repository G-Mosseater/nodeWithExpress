<%- include('../includes/head', { pageTitle: pageTitle, stylesheet: '/product.css' }) %>
  </head>

  <body class="body">
    <%- include('../includes/navigation', { path: path }) %>

      <main class="main">
        <h1>Your Orders</h1>

        <% if (orders && orders.length > 0) { %>
          <% orders.forEach(order => { %>
            <h2>Order #<%= order.id %> - Placed on <%= order.createdAt.toDateString() %></h2>
            <div class="product-list">
              <% order.items.forEach(item => { %>
                <div class="product-card">
                  <h2 class="product-card__title">
                    <%= item.productData.title %>
                  </h2>

                  <img src="/<%= item.productData.imageUrl %>" alt="<%= item.productData.title %>" class="product-card__img">

                  <p class="product-card__description">
                    <%= item.productData.description %>
                  </p>

                  <p class="product-card__price">
                    Price: $<%= item.productData.price %> Ã— <%= item.quantity %> = $<%= item.productData.price * item.quantity %>
                  </p>

                  <p>Quantity: <%= item.quantity %>
                      <a href="/orders/<%= order._id %>">Invoice</a>
                  </p>
                </div>
              <% }) %>
            </div>
          <% }) %>
        <% } else { %>
          <p>You have no orders yet.</p>
        <% } %>
      </main>

      <%- include('../includes/end') %>
  </body>
</html>
