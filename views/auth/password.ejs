<%- include('../includes/head', { pageTitle: "Reset Password" , stylesheet: '/product.css' }) %>

    <body class="body">
        <%- include('../includes/navigation', { path: path }) %>

            <main class="main">

                <% if (errorMessage && errorMessage.length> 0) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage[0] %>
                    </div>
                    <% } %>

                        <form class="login-form" action="/password" method="POST">
                            <h1 class="login-form__title">Reset Password</h1>

                            <input class="login-form__input" type="password" name="password"
                                placeholder="Enter your new password" required>

                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">


                            <button class="login-form__button" type="submit">Update Passwprd</button>
                        </form>

                        <a href="/login">Back to Login</a>

            </main>

            <%- include('../includes/end') %>
    </body>

    </html>